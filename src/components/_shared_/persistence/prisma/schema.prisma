generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wilaya {
  wilayaNumber Int    @id
  arabicName   String
  englishName  String
}

model User {
  userId       String   @id
  firstName    String
  lastName     String
  wilayaNumber Int
  phone        String   @unique
  email        String   @unique
  password     String
  createdAt    DateTime
}

