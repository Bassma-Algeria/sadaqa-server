// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wilaya {
  wilayaNumber Int    @id
  arabicName   String
  englishName  String
}

model User {
  userId       String   @id
  firstName    String
  lastName     String
  wilayaNumber Int
  phone        String   @unique
  email        String   @unique
  password     String
  createdAt    DateTime
}

model Association {
  associationId   String   @id
  associationName String
  wilayaNumber    Int
  phone           String   @unique
  email           String   @unique
  password        String
  active          Boolean
  createdAt       DateTime
}

model DonationPost {
  postId       String   @id
  title        String
  description  String
  category     String
  wilayaNumber Int
  pictures     String[]
  publisherId  String
  status       String
  createdAt    DateTime
}

model DonationRequestPost {
  postId       String   @id
  title        String
  description  String
  category     String
  wilayaNumber Int
  pictures     String[]
  publisherId  String
  status       String
  createdAt    DateTime
}

model FamilyInNeedPost {
  postId          String   @id
  title           String
  description     String
  wilayaNumber    Int
  publisherId     String
  pictures        String[]
  ccp             String?
  ccpKey          String?
  baridiMobNumber String?
  status          String
  createdAt       DateTime
}

model CallForHelpPost {
  postId          String   @id
  title           String
  description     String
  wilayaNumber    Int
  publisherId     String
  pictures        String[]
  ccp             String?
  ccpKey          String?
  baridiMobNumber String?
  status          String
  createdAt       DateTime
}

model FavouritePost {
  userId   String
  postId   String
  postType String

  @@id([userId, postId, postType])
}

model TextMessage {
  messageId  String   @id
  senderId   String
  receiverId String
  content    String
  read       Boolean
  createdAt  DateTime
}
